<?xml version="1.0" encoding="utf-8"?>


                                                     
                                                 

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/mainView"
    android:transitionName="mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false" android:tag="layout/fragment_feed_detail_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <ImageView
      android:id="@+id/ivImage"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:transitionName="ivImage"
      app:layout_constraintDimensionRatio="16:9"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:background="@color/colorPrimary" />

    <TextView
      android:id="@+id/tvTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="16dp"
      android:textColor="@android:color/black"
      android:textSize="24dp"
      android:transitionName="tvTitle"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/ivImage"
      tools:text='Doctors say: "Keep walking"' />

    <TextView
      android:id="@+id/tvDescription"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="16dp"
      android:textColor="@android:color/black"
      android:textSize="16dp"
      android:transitionName="tvDescription"
      app:layout_constrainedWidth="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tvTitle"
      app:layout_constraintVertical_bias="0"
      tools:text="Last scientific research claims that you should walk at least 3km a day to stay healthy. Even if you think that you don't have enough time, it's better for you to do it." />


  </androidx.constraintlayout.widget.ConstraintLayout>

         